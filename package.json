{
  "name": "@scdev/decorate-request-response",
  "version": "2.0.0",
  "description": "This package allow for decorating request and/or response objects without modifying the shape of the object on each requests.",
  "repository": {
    "url": "https://github.com/simonecorsi/decorate-request-response"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "exports": {
    "require": "./src/index.cjs",
    "default": "./src/index.mjs",
    "node": "./src/index.mjs",
    "import": "./src/index.mjs"
  },
  "scripts": {
    "test": "tap",
    "coverage": "tap --coverage-report=html",
    "prepare": "node prepare.mjs || echo \"Skip prepare\"",
    "types": "tsc --allowJs -d --emitDeclarationOnly src/index.cjs"
  },
  "keywords": [
    "nodejs",
    "decorate",
    "request",
    "response",
    "http",
    "server",
    "github",
    "nodejs",
    "javascript",
    "md",
    "js",
    "esnext",
    "node",
    "npm"
  ],
  "author": "Simone Corsi <simonecorsi.dev@gmail.com>",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@semantic-release/npm": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^24.0.0",
    "lefthook": "^2.0.0",
    "markdown-toc": "^1.2.0",
    "tap": "^21.1.0"
  }
}
